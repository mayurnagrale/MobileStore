@model MobileStore.Models.User

<!DOCTYPE html>

<html>
<head>
	<title>Login</title>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
	<div class="container mt-5">
	<div class="row justify-content-center align-items=-enter">
		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Mobile-Store-Login</h1>

            <form method="post" asp-action="Login">
            <div class="mb-3">
                <label class="form-label" for="username">Username:</label>
                <input class="form-control" type="text" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password:</label>
                <input class="form-control" type="password" id="password" name="password" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="KeepLoggedIn">Keep me logged in </label>
                <input type="checkbox" id="KeepLoggedIn" name="KeepLoggedIn">
             </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
        </div>
    </div>
    </div>
</body>
</html>