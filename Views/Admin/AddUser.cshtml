<!DOCTYPE html>

<html>
<head>
	<title>Add User</title>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
	<div class="container mt-5">
	<div class="row justify-content-center align-items=-enter">
		<div class="col-sm-12 col-md-12 col-lg-4">
			<h1 class="mb-3">Mobile-Store-Login</h1>

            <form method="post" asp-action="AddUser">
            <div class="mb-3">
                <label class="form-label" for="username">Username:</label>
                <input class="form-control" type="text" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password:</label>
                <input class="form-control" type="password" id="password" name="password" required>
            </div>
              <div class="mb-3">
                <label class="form-label" for="selectRole">Roles:</label>
                <select class="form-control" type="dropdown" id="selectRole" name="selectRole" > 
                    <option value="">Select Role</option>
                      @foreach (var role in @ViewBag.Roles)
                            {
                                <option value="@role.RoleId">@role.RoleName</option>
                            }
                </select>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Add User</button>
            </div>
        </form>
        </div>
    </div>
    </div>
</body>
</html>