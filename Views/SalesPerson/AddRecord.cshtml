            <div class="mb-2">
                <label class="form-label" for="quantitySold">QuantitySold:</label>
                <input class="form-control" type="text" id="quantitySold" name="quantitySold" required>
            </div>
            <div class="mb-2">
                <label class="form-label" for="salesPrice">SalesPrice:</label>
                <input class="form-control" type="text" id="salesPrice" name="salesPrice" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="discount">Discount:</label>
                <input class="form-control" type="text" id="discount" name="discount" required>
            </div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Add Record</button>
            </div>
            </form>
        </div>
