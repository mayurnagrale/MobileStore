@model SaleRecord

<!DOCTYPE html>

<html>
<head>
    <title>Add User</title>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center align-items=-enter">
            <div class="col-sm-12 col-md-12 col-lg-4">
                <h1 class="mb-3">Mobile-Store-Add Record</h1>
                <form method="post" asp-action="ModifyRecords1">
                    <div class="mb-2">
                        <label class="form-label" for="saleId">SaleId:</label>
@*                        <input class="form-control" type="hidden" id="SaleIdModel" name="SaleIdModel" value=@Model.SaleId>*@
                        <input class="form-control" type="text" id="saleId" name="saleId" value=@Model.SaleId required >
                    </div>
                    <div class="mb-2">
                        <label class="form-label" for="mobileModel">MobileModel:</label>
                        <input class="form-control" type="text" id="mobileModel" name="mobileModel" value=@Model.MobileModel required>
                    </div>
                    <div class="mb-2">
                        <label class="form-label" for="mobileBrand">MobileBrand:</label>
                        <input class="form-control" type="text" id="mobileBrand" name="mobileBrand" value=@Model.MobileBrand required>
                    </div>
                    <div class="mb-2">
                        <label class="form-label" for="quantitySold">QuantitySold:</label>
                        <input class="form-control" type="text" id="quantitySold" name="quantitySold" value=@Model.QuantitySold required>
                    </div>
                    <div class="mb-2">
                        <label class="form-label" for="salesPrice">SalesPrice:</label>
                        <input class="form-control" type="text" id="salesPrice" name="salesPrice" value=@Model.SalesPrice required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="discount">Discount:</label>
                        <input class="form-control" type="text" id="discount" name="discount" value=@Model.Discount required>
                    </div>
                    @*<div class="mb-3">
                        <label class="form-label" for="creator">Created by:</label>
                        <input class="form-control" type="text" id="creator" name="creator" value=@Model.User.Username required>
                        </div>*@
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Modify Record</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>